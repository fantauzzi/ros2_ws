      <option name="COMMAND" value="/usr/bin/rm" />
      <option name="PARAMETERS" value="-rf build install" />
      <option name="WORKING_DIRECTORY" value="$USER_HOME$/workspace/ros2_ws" />
    </exec>
  </tool>
</toolSet>